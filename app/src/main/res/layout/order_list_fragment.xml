<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lvOrder"
            android:background="@color/grey_50"
            android:layout_alignParentLeft="true"
            android:layout_above="@+id/orderOptContainer"
            android:layout_alignParentTop="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/orderOptContainer"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:divider="@android:drawable/divider_horizontal_bright"
            android:showDividers="middle"
            android:dividerPadding="8dp"
            android:background="@color/grey_300">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnViewReceipt"
                android:src="@drawable/ic_receipt_grey600_24dp"
                style="@android:style/Widget.Holo.Button.Borderless" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnHoldOrder"
                android:src="@drawable/ic_save_grey600_24dp"
                style="@android:style/Widget.Holo.Button.Borderless" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnDeleteOrder"
                android:src="@drawable/ic_delete_grey600_24dp"
                android:layout_gravity="right"
                style="@android:style/Widget.Holo.Button.Borderless" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnClearOrder"
                android:src="@drawable/ic_clear_grey600_24dp"
                android:layout_gravity="right"
                style="@android:style/Widget.Holo.Button.Borderless" />

        </LinearLayout>

    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvSummary"
        android:divider="@null" />

</LinearLayout>
