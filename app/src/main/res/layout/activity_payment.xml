<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vtec.j1tth4.vtecpos.PaymentActivity"
    android:padding="@dimen/default_horizontal_margin">

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.vtec.j1tth4.vtecpos.PaymentTypeSlidingTabLayout"
        android:id="@+id/paymenttype_tab"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/payment_content"
        android:layout_alignEnd="@+id/payment_content" />

    <FrameLayout
        android:layout_width="380dp"
        android:layout_height="fill_parent"
        android:layout_below="@+id/paymenttype_tab"
        android:id="@+id/paydetail_content"
        android:background="@color/grey_50"
        android:layout_marginRight="@dimen/default_horizontal_margin"
        android:layout_above="@+id/linearLayout"></FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/payment_content"
        android:layout_toRightOf="@+id/paydetail_content"
        android:layout_above="@+id/linearLayout5"
        android:layout_alignTop="@+id/paydetail_content">

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout"
        android:padding="@dimen/default_horizontal_margin"
        android:layout_alignRight="@+id/paydetail_content"
        android:layout_alignEnd="@+id/paydetail_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/total"
                android:id="@+id/total_price_label"
                android:layout_weight="1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="36sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:id="@+id/total_price"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/total_paid"
                android:id="@+id/total_paid_label"
                android:layout_weight="1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:id="@+id/total_paid"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/total_due"
                android:id="@+id/total_due_label"
                android:layout_weight="1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total_due"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@android:color/holo_red_dark"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/change"
                android:id="@+id/change_label"
                android:layout_weight="1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/change"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:text="0" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_toRightOf="@+id/linearLayout"
        android:layout_alignRight="@+id/payment_content"
        android:layout_alignEnd="@+id/payment_content"
        android:id="@+id/linearLayout5"
        android:gravity="center|right">

        <Button
            android:layout_width="120dp"
            android:layout_height="72dp"
            android:text="@android:string/cancel"
            android:id="@+id/pay_cancel"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_below="@+id/payment_content"
            android:layout_toLeftOf="@+id/pay_confirm"
            android:layout_toStartOf="@+id/pay_confirm" />

        <Button
            android:layout_width="120dp"
            android:layout_height="72dp"
            android:text="@string/confirm"
            android:id="@+id/pay_confirm"
            android:onClick="onClick"
            android:layout_below="@+id/payment_content"
            android:layout_alignRight="@+id/payment_content"
            android:layout_alignEnd="@+id/payment_content" />
    </LinearLayout>

</RelativeLayout>
