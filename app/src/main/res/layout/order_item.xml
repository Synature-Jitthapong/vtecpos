<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_horizontal_margin">

    <CheckedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="item title"
        android:id="@+id/orderTitle"
        android:layout_alignTop="@+id/orderThumbPic"
        android:layout_toRightOf="@+id/orderThumbPic"
        android:checked="false"
        android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="center_vertical"
        android:layout_toStartOf="@+id/btnOrderMinus"
        android:lines="1" />

    <ImageButton
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnOrderMoreOpt"
        android:src="@drawable/ic_more_vert_grey600_24dp"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:id="@+id/orderThumbPic"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sub title"
        android:id="@+id/orderSubTitle"
        android:layout_below="@+id/orderTitle"
        android:layout_alignLeft="@+id/orderTitle"
        android:layout_alignStart="@+id/orderTitle"
        android:textStyle="italic"
        android:layout_marginLeft="32dp"
        android:layout_toStartOf="@+id/btnOrderMinus"
        android:lines="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:id="@+id/orderTotalRetailPrice"
        android:minWidth="@dimen/item_price_min_width"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btnOrderMoreOpt"
        android:layout_toStartOf="@+id/btnOrderMoreOpt"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/orderQty"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btnOrderPlus"
        android:layout_toStartOf="@+id/btnOrderPlus"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnOrderPlus"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/orderTotalRetailPrice"
        android:layout_toStartOf="@+id/orderTotalRetailPrice"
        android:src="@drawable/ic_add_circle_grey600_36dp"
        style="@android:style/Widget.Holo.Button.Borderless" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnOrderMinus"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/orderQty"
        android:layout_toStartOf="@+id/orderQty"
        android:src="@drawable/ic_remove_circle_grey600_36dp"
        style="@android:style/Widget.Holo.Button.Borderless" />

</RelativeLayout>