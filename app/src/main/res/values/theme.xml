<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MyTheme.NoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">

    </style>
    <style name="Theme.MyTheme" parent="CustomActionBarTheme">
    </style>
    <style name="Theme.MyTheme.ActivityDialog" parent="CustomActivityDialogTheme">
    </style>

    <style name="CustomActivityDialogTheme"
        parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
        parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/indigo</item>
        <!-- Support library compatibility -->
        <item name="background">@color/indigo</item>
    </style>
</resources>